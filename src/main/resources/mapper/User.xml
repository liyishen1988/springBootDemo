<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lys.demo.dao.UserDao" >

    <select id="selectUserById"  resultType="com.lys.demo.model.User">
        SELECT * FROM `user` WHERE id = #{id}
    </select>

    <select id="listUsers"  resultType="com.lys.demo.model.User">
        SELECT * FROM `user`
    </select>

    <insert id="addUser">
        INSERT INTO `user`(`name`,age,sex,email,mobile,role) VALUES (#{name},#{age},#{sex},#{email},#{mobile},#{role});
    </insert>

</mapper>